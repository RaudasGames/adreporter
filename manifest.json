{
    "manifest_version": 2,
    "name": "CardGames.io Ad Reporter",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://cardgames.io/*"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "permissions": [
        "webRequest",
        "<all_urls>"
    ]
}